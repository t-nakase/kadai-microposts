
<% if current_user.chkfavorite?(post) %>
  <%= form_with(model: current_user.favorites.find_by(micropost_id: post.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :micropost_id, post.id %>
    <%= f.submit 'unfavorite', class: 'btn btn-danger btn-sm' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build, local:true) do |f| %>
    <%= hidden_field_tag :micropost_id, post.id %>
    <%= f.submit 'favorite', class: 'btn btn-primary btn-sm' %>
  <% end %>
<% end %>

